{
  "name": "monorepo-typesafe",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "valibot": "^1.0.0",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "dotenv": "^17.2.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "check-types": "bun run --filter '*' check-types",
    "dev:server": "bun run --filter @monorepo-typesafe/server dev",
    "db:push": "bun run --filter @monorepo-typesafe/db db:push",
    "db:start": "bun run --filter @monorepo-typesafe/db db:start",
    "db:stop": "bun run --filter @monorepo-typesafe/db db:stop",
    "db:down": "bun run --filter @monorepo-typesafe/db db:down",
    "db:studio": "bun run --filter @monorepo-typesafe/db db:studio"
  },
  "dependencies": {
    "@monorepo-typesafe/env": "workspace:*",
    "dotenv": "catalog:",
    "valibot": "catalog:"
  },
  "devDependencies": {
    "@monorepo-typesafe/config": "workspace:*",
    "@types/bun": "catalog:",
    "typescript": "catalog:"
  }
}